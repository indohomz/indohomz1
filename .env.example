# =============================================================================
# IndoHomz Environment Configuration Template
# =============================================================================
# ⚠️  SECURITY WARNING:
#     1. Copy this file to .env and fill in your actual values
#     2. NEVER commit .env to version control!
#     3. Rotate ALL keys if they were ever exposed
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
# For local development (SQLite):
DATABASE_URL=sqlite:///./indohomz.db

# For production (Supabase PostgreSQL):
# DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres

# Docker Compose (if using docker):
# DATABASE_URL=postgresql://postgres:changeme@db:5432/indohomz
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=changeme
# POSTGRES_DB=indohomz

# Supabase Direct Client (optional - for storage, realtime, etc.)
SUPABASE_URL=
SUPABASE_KEY=
SUPABASE_SERVICE_KEY=

# -----------------------------------------------------------------------------
# SECURITY - ⚠️ GENERATE NEW VALUES FOR PRODUCTION!
# -----------------------------------------------------------------------------
# Generate a secure key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_ME_RUN_python-c-import-secrets-print-secrets.token_urlsafe-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# -----------------------------------------------------------------------------
# AI / LLM CONFIGURATION
# -----------------------------------------------------------------------------
# OpenAI - for AI descriptions and embeddings
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Tavily - fallback for AI report generation
TAVILY_API_KEY=

# -----------------------------------------------------------------------------
# GOOGLE SERVICES
# -----------------------------------------------------------------------------
GOOGLE_MAPS_API_KEY=

# -----------------------------------------------------------------------------
# reCAPTCHA (Anti-Spam Protection)
# -----------------------------------------------------------------------------
RECAPTCHA_ENABLED=False
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# -----------------------------------------------------------------------------
# SMS/OTP SERVICE
# -----------------------------------------------------------------------------
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
MSG91_AUTH_KEY=
MSG91_SENDER_ID=INDOHZ

# -----------------------------------------------------------------------------
# WHATSAPP INTEGRATION (Future)
# -----------------------------------------------------------------------------
WHATSAPP_API_URL=
WHATSAPP_API_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=

# -----------------------------------------------------------------------------
# ENVIRONMENT SETTINGS
# -----------------------------------------------------------------------------
ENVIRONMENT=development
DEBUG=True
FRONTEND_URL=http://localhost:5173

# CORS Settings (comma-separated or JSON array)
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# -----------------------------------------------------------------------------
# CACHING (Redis - optional)
# -----------------------------------------------------------------------------
REDIS_ENABLED=False
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# ML MODEL SETTINGS
# -----------------------------------------------------------------------------
MODEL_PATH=./models/
RETRAIN_INTERVAL_HOURS=24

# -----------------------------------------------------------------------------
# FRONTEND (Vite)
# -----------------------------------------------------------------------------
VITE_API_BASE_URL=http://localhost:8000
# For Vercel production:
# VITE_API_BASE_URL=https://your-api-domain.com
